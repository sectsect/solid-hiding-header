{
  "version": "1.2.0",
  "name": "@sect/solid-hiding-header",
  "description": "SolidJS header that disappears on scroll down and appears on scroll up.",
  "license": "MIT",
  "author": "sect",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sectsect/solid-hiding-header.git"
  },
  "homepage": "https://github.com/sectsect/solid-hiding-header#readme",
  "bugs": {
    "url": "https://github.com/sectsect/solid-hiding-header/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "sideEffects": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "dev": "vite serve dev",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "prepublishOnly": "pnpm build",
    "format": "prettier -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"dev/**/*.{js,ts,json,css,tsx,jsx}\"",
    "update-deps": "taze -w && pnpm i",
    "lint": "eslint --ext .ts,tsx src",
    "lint:fix": "eslint --fix --ext .ts,tsx src",
    "type-check": "tsc --noEmit --pretty",
    "type-check:watch": "npm run type-check -- --watch",
    "prepare": "husky install",
    "release": "release-it"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "eslint"
    ],
    "src/**/*.{ts,tsx}": [
      "tsc-files --noEmit"
    ],
    "src/**/*.json": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "solid-js": ">=1.0.0"
  },
  "dependencies": {
    "hiding-header": "^0.8.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@secretlint/secretlint-rule-preset-recommend": "^6.2.3",
    "@solidjs/testing-library": "^0.6.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/node": "^18.15.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.3",
    "babel-preset-solid": "^1.6.13",
    "eslint": "8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-solid": "^0.11.0",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "prettier": "2.8.4",
    "release-it": "^15.9.0",
    "rollup": "^3.19.1",
    "rollup-preset-solid": "^2.0.1",
    "secretlint": "^6.2.3",
    "solid-js": "^1.6.15",
    "taze": "^0.9.0",
    "tsc-files": "^1.1.3",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-solid": "^2.6.1",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.3"
  },
  "keywords": [
    "solid",
    "solidjs",
    "header",
    "scroll",
    "typescript"
  ],
  "packageManager": "pnpm@7.5.0"
}
