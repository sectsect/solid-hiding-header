{
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --no-cache --continue",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e --filter=solidjs-boilerplate",
    "coverage": "turbo coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:css": "turbo lint:css",
    "type-check": "turbo type-check",
    "type-check:watch": "turbo type-check:watch",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=solidjs-boilerplate^... && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "secretlint": "^7.0.7",
    "turbo": "^1.10.13"
  },
  "packageManager": "pnpm@8.7.0"
}
