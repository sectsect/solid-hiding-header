{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "test:e2e": {
      "cache": false
    },
    "coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "type-check:watch": {},
    "start": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
